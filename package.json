{
  "name": "gaia-code",
  "version": "1.0.0",
  "description": "A code editor and task manager that uses LangChain with Claude Code agents to work on git projects",
  "main": "index.js",
  "type": "module",
  "bin": {
    "gaia-code": "./gaia-code.js"
  },
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "dev": "concurrently \"cd backend && npm run dev\" \"cd frontend && npm start\"",
    "restart": "bash -c 'kill $(lsof -t -i:3001) $(lsof -t -i:3002) 2>/dev/null || true && npm start'",
    "cli": "node gaia-code.js",
    "build:cli": "cd gaiascript && node build-gaia-code.js",
    "test": "jest",
    "lint": "eslint *.js",
    "format": "prettier --write '*.js'"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^4.1.2", 
    "concurrently": "^8.2.1",
    "dotenv": "^16.3.1",
    "inquirer": "^8.2.6",
    "marked": "^9.1.5",
    "marked-terminal": "^6.1.0"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
  }
}